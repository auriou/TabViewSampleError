<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="TabViewSample.Views.OneView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BindingContext="{Binding OneView, Source={StaticResource Locator}}">
    <ContentView.Content>
        <StackLayout Margin="20">
            <Label
                FontSize="Large"
                Text="Hello One View"
                TextColor="Red" />
            <Button Command="{Binding ClickCommand}" Text="Click command" />
            <Label
                FontSize="Large"
                Text="{Binding CountClick}"
                TextColor="Red" />
        </StackLayout>
    </ContentView.Content>
</ContentView>